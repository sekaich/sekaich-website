{
	// Use IntelliSense to learn about possible Node.js debug attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "TS-file",
			"preLaunchTask": "CompileTS",
			"program": "${workspaceFolder}/src/tasks/${fileBasename}",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "ts-node",
			"program": "ts-node ${workspaceFolder}/${relativeFile}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "TS",
			"args": ["${relativeFile}"],
			"runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
			"sourceMaps": true,
			"env": { "NODE_ENV": "development" },
			"cwd": "${workspaceRoot}",
			"protocol": "inspector"
		}
	]
}
